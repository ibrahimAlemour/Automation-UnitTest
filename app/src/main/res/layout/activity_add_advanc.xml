<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".doctors.AddAdvancActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:background="@color/purple_700"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

        <TextView
            android:id="@+id/tvT"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Advance"
            android:fontFamily="@font/chivo_regular"
            android:textSize="@dimen/_19ssp"
            android:textColor="@color/white"/>




    </LinearLayout>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Title"
        android:inputType="text"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_12sdp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColorHint="@color/purple_200"
        android:background="@drawable/et_style"/>

    <EditText
        android:id="@+id/etDEs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Descriptions"
        android:inputType="text"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_12sdp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColorHint="@color/purple_200"
        android:background="@drawable/et_style"/>

    <EditText
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Url YouTube"
        android:inputType="text"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_12sdp"
        android:gravity="left|center"
        android:drawablePadding="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColorHint="@color/purple_200"
        android:background="@drawable/et_style"/>


    <LinearLayout
        android:id="@+id/linearImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical"
        android:background="@drawable/et_style2"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:padding="@dimen/_4sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgAdvance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_176sdp"
            android:src="@drawable/addphoto"
            android:background="@drawable/img_style" />

        <TextView
            android:id="@+id/tvPathImg"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Plant Cultivation"
            android:fontFamily="@font/chivo_regular"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textSize="@dimen/_15ssp"
        android:padding="@dimen/_8sdp"
        android:text="Post advice"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@drawable/btn_style"/>

</LinearLayout>